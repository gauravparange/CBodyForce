@model IEnumerable<Role>


    <div class="card">
        <div class="card-body">
        <a class="btn btn-primary" asp-action="CreateRole" asp-asp-controller="Administration">Add Role</a>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Role Id</th>
                        <th>Role Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Any())
                {
                    @foreach (var role in Model)
                    {
                        <tr>

                            <td> @role.Id</td>
                            <td> @role.Name</td>
                            <td>
                                <a class="bi bi-pencil-square  text-primary fs-6" asp-action="EditRole" asp-controller="Administration" asp-route-RoleId="@role.Id"></a>
                                <a class="bi bi-trash text-danger fs-6" asp-action="DeleteRole" asp-controller="Administration"></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No Records Found</td>
                    </tr>
                }
                
                </tbody>
            </table>
        </div>
    </div>
    

