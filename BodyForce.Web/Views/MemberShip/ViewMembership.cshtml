@model IEnumerable<ViewMembershipDto>
@{
    ViewData["Title"] = "ViewMembership";
}
@{
    int srNo = 1; // Start from 1 instead of 0
}

<div class="card">
    <div class="card-body">
        <a class="btn btn-primary" asp-action="AddMembership" asp-controller="MemberShip">Add Membership</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Subscription Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Renewal Date</th>
                    <th>Payment</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>@srNo</td>
                            <td>@member.SubscriptionName</td>
                            <td>@member.StartDate</td>
                            <td>@member.EndDate</td>
                            <td>@member.RenewalDate</td>
                            <td>@member.Payment</td>                            
                            <td>
                                <div class="d-flex justify-content-around  w-100">
                                    <a class="bi bi-pencil-square  text-primary fs-6" asp-action="EditMembership" asp-controller="MemberShip" asp-route-UserId="@member.UserId"></a>
                                    <a class="bi bi-trash text-danger fs-6" asp-action="DeleteMembership" asp-controller="MemberShip"></a>
                                </div>
                            </td>
                        </tr>
                        { srNo++; } // Increment the serial number after each row
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">No Records Found</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

